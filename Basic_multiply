// This file create 3 integer variables, multiply them then print the result.

#include <stdio.h>

int term; // term used in two expressions.

int main()
{
    term = 3 * 5;
    term_2 = 2 * term;
    term_3 = 3 * term;
    printf("Twice %d is %d.\n", term, term * 2);
    printf("Three times %d is %d.\n", term, term * 3);
    getchar();
